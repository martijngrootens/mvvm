<Window x:Class="Mvvm.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24pt"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--Selection Menu-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Row="0" Grid.Column="0" Text ="{Binding Inspection.NextIndex}"/>
            <Button Grid.Row="0" Grid.Column="1" Content="Select" Command="{Binding Inspection.SelectCommand}"/>
        </Grid>
        
        <!--Data Display-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--Personal Info-->
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60pt"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0"><Run FontWeight="Bold" Text="Personal"/></TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Index:"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="ID:"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Full name:"/>
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Date of Birth:"/>
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Sex:"/>

                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Inspection.CurrentIndex}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Inspection.Selection.Id}"/>
                <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding Inspection.Selection.FullName}"/>
                <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding Inspection.Selection.BirthDay}"/>
                <TextBlock Grid.Row="5" Grid.Column="4" Text="{Binding Inspection.Selection.Sex}"/>
            </Grid>
            
            <!--Address Info-->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60pt"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0"><Run FontWeight="Bold" Text="Address"/></TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Street:"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="City:"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Region:"/>
                <TextBlock Grid.Row="4" Grid.Column="0" Text="PostalCode:"/>

                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Inspection.Selection.Addresss.Street}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Inspection.Selection.Addresss.City}"/>
                <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding Inspection.Selection.Addresss.Region}"/>
                <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding Inspection.Selection.Addresss.PostalCode}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
